<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All user</title>
    <style>
        table,
        th,
        td{
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <table>
        <tr><th>NO</th>
            <th>Id</th>
            <th>Email</th>
            <th>Username</th>
        </tr>
        <% for (let i = 0; i < users.length; i++) { %>
            <tr>
                <td><%= i + 1 %></td>                  
                <td><%= users[i].id %></td>
                <td><%= users[i].email %></td>
                <td><%= users[i].username %></td>
                <td>
                    <form action="/user/<%=users[i].id%>/edit">
                        <button>Edit username</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </table>
</body>
</html>

